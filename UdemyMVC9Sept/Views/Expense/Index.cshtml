@model IEnumerable<UdemyMVC9Sept.Models.Expense>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Expenses</h2>
            </div>
        <div class="col-6 text-end">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Create New Expense</a>
        </div>

        </div>

    </div>

    <br />
    @if (Model.Count() > 0)
{
 <table class="table table-bordered table-striped" style = "width:100%">
     <thead>
         <tr>
             <th>
                 Expense Name
             </th>
             <th>
                 Amount
             </th>
             <th>
                 Expense Type
             </th>
                <th>
                    Action
                </th>
         </tr>
     </thead>
     <tbody>
         @foreach(var expense in Model)
            {
                <tr>
                    <td width="35%">@expense.ExpenseName</td>
                    <td width="35%">@expense.Amount</td>
                    @* <td width="35%">@expense.ExpenseTypeId</td> *@
                    <td width="35%">@expense.ExpenseType.Name</td>
                    <td width="30%">
                        <div class="w-100 btn btn-group"role="group">
                            <a asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

 </table>   
}
else
{
    <p>Not Expense created yet!</p>
}
